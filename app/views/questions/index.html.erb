<h1>question Page</h1>
<hr>
<ul class="list-group well">
  <% @questions.each do |question| %>
    <li class="list-group-item"><strong><%= question.author %></strong>
     <%= link_to question.content, question_path(question), :class => "btn btn-info btn-sm pull-right" %></li>
  <% end %>
</ul>
<hr>

<% if @current_user %>
  <%= link_to "Ask a question", new_user_question_path(session[:user_id]), :class => "btn-lg"%>
  <%= link_to "Edit your questions", user_path(session[:user_id]), :class => "btn btn-success" %>
<% end %>
